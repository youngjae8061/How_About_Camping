<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/campingpic2"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="40dp"/>
<!--
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:background="@drawable/style_login_id"
        android:padding="10dp"
        android:textStyle="bold"
        android:hint="   이 름" />  -->

    <EditText
        android:id="@+id/edt_join_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:padding="10dp"
        android:ems="10"
        android:textStyle="bold"
        android:hint="   이 메 일"
        android:background="@drawable/style_login_id"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edt_join_pw"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:padding="10dp"
        android:ems="10"
        android:textStyle="bold"
        android:hint="   비 밀 번 호"
        android:background="#E6CDA9"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edt_join_pwchk"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:padding="10dp"
        android:ems="10"
        android:textStyle="bold"
        android:hint="   비 밀 번 호 확 인"
        android:background="@drawable/style_login_pw"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="@drawable/style_button"
        android:textStyle="bold"
        android:text="회 원 가 입"/>

</LinearLayout>